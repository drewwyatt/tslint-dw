{
    "extends": [
        "tslint:recommended",
        "tslint-immutable"
    ],
    "rules": {
        "readonly-keyword": [
            true
        ],
        "readonly-array": [
            true
        ],
        "no-let": [
            true
        ],
        "no-empty-interface": false,
        "max-line-length": [
            true,
            150
        ],
        "arrow-parens": false,
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "interface-name": [
            false
        ],
        "variable-name": [
            true,
            "allow-pascal-case"
        ]
    }
}